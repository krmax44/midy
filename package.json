{
	"name": "midy",
	"version": "1.0.0",
	"description": "A super-minimalistic MIDI library.",
	"keywords": [
		"midi",
		"web midi"
	],
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"files": [
		"build"
	],
	"repository": "github:krmax44/midy",
	"author": "krmax44<hi@krmax44.de>",
	"license": "MIT",
	"scripts": {
		"test": "jest",
		"lint": "xo",
		"ci": "yarn lint && yarn test --coverage",
		"build": "tsc",
		"dev": "tsc -w"
	},
	"devDependencies": {
		"@types/jest": "^25.1.3",
		"@types/webmidi": "^2.0.4",
		"@typescript-eslint/eslint-plugin": "^2.21.0",
		"@typescript-eslint/parser": "^2.21.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-config-xo-typescript": "^0.26.0",
		"eslint-plugin-prettier": "^3.1.2",
		"husky": "^4.2.3",
		"jest": "^25.1.0",
		"np": "^6.1.0",
		"prettier": "^1.19.1",
		"ts-jest": "^25.2.1",
		"typescript": "^3.8.2",
		"xo": "^0.27.1"
	},
	"xo": {
		"extends": [
			"xo-typescript",
			"plugin:prettier/recommended"
		],
		"extensions": [
			"ts",
			"js"
		],
		"envs": [
			"browser"
		],
		"rules": {
			"@typescript-eslint/unified-signatures": "off"
		},
		"ignores": [
			"**/__tests__/**",
			"jest.config.js"
		],
		"prettier": true
	},
	"prettier": {
		"bracketSpacing": true,
		"singleQuote": true,
		"useTabs": true
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint",
			"pre-push": "yarn test"
		}
	},
	"dependencies": {
		"houk": "^1.1.1"
	}
}
