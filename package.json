{
	"name": "midy",
	"version": "1.1.0",
	"description": "A super-minimalistic MIDI library.",
	"keywords": [
		"midi",
		"web midi"
	],
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"files": [
		"build"
	],
	"repository": "github:krmax44/midy",
	"author": "krmax44<hi@krmax44.de>",
	"license": "MIT",
	"scripts": {
		"test": "jest",
		"lint": "xo",
		"build": "tsc",
		"dev": "tsc -w"
	},
	"dependencies": {
		"@types/webmidi": "^2.0.4",
		"houk": "^3.0.2"
	},
	"devDependencies": {
		"@types/jest": "^26.0.13",
		"@typescript-eslint/eslint-plugin": "^4.1.0",
		"@typescript-eslint/parser": "^4.1.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-config-xo-typescript": "^0.32.0",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^4.3.0",
		"jest": "^26.4.2",
		"np": "^6.5.0",
		"prettier": "^2.1.1",
		"ts-jest": "^26.3.0",
		"typescript": "^4.0.2",
		"xo": "^0.33.1"
	},
	"xo": {
		"extends": [
			"xo-typescript",
			"plugin:prettier/recommended"
		],
		"extensions": [
			"ts",
			"js"
		],
		"envs": [
			"browser"
		],
		"rules": {
			"@typescript-eslint/unified-signatures": "off"
		},
		"ignores": [
			"**/__tests__/**",
			"jest.config.js"
		],
		"prettier": true
	},
	"prettier": {
		"bracketSpacing": true,
		"singleQuote": true,
		"useTabs": true
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint",
			"pre-push": "yarn test"
		}
	}
}
